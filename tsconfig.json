{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // Enable strict type-checking options for better type safety
    "strict": true,

    // Define module resolution paths for cleaner imports
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
